@import "common.rasi"

mainbox 
{
    enabled:                     true;
    spacing:                     0;
    padding:                     3% 2%;
    margin:                      0px;
    border:                      0px solid;
    border-radius:               0%;
    background-color:            @background;
    orientation:                 vertical;
    children:                    [ "inputbar", "message" ];
}

inputbar {
    padding:                     15px;
    border-radius:               0px;
    background-color:            @background;
    text-color:                  @surfaceVariant;
    children:                    [ "dummy", "prompt", "dummy"];
}

dummy {
    background-color:            transparent;
}

prompt {
    background-color:            inherit;
    text-color:                  inherit;
    font:                        @fontTextHuge;
}

message {
    enabled:                     true;
    margin:                      1% 2%;
    padding:                     2% 2%;
    border-radius:               10px;
    background-color:            @surfaceContainer;
    text-color:                  @onSurface;
}

textbox {
    background-color:            inherit;
    text-color:                  inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}
